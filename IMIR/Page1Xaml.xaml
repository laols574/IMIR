<?xml version="1.0" encoding="UTF-8"?>


<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="IMIR.Page1Xaml"
			 Title="Page 1">

   <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Label Grid.Row="0"
            Text="Navigating the US Asylum System"
            VerticalTextAlignment="Center" HorizontalTextAlignment="Center"
             Margin="10,10" FontSize="Title"
               />


        <Button Grid.Row="1" Grid.Column="0" Text="Click Here to Begin"
                Margin="30,50" 
                BackgroundColor="AliceBlue" TextColor="Black" FontSize="Subtitle"
                Clicked="OnNextPageButtonClicked" VerticalOptions="CenterAndExpand"
                x:Name="button"
                />


       
    </Grid>

</ContentPage>